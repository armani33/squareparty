<% flash.each do |key, value| %>
  <div class="<%= key %>" style="color:orange; margin: 10px 0 0 10px;">
    <p><%= value %></p>
  </div>
<% end %>
<div class="login-page-container">
  <div class="login-page-content">
    <div class="left">
      <%= image_tag('login-page-logo.png', class: "macbook") %>
      <h1>Login</h1>
    </div>
    <div class="right">
      <%= form_tag sessions_path do |form| %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= label_tag :email %>
            <%= text_field_tag :email,"", class: "form-control", placeholder: "Email"  %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= label_tag :password %>
            <%= password_field_tag :password_digest,"", class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Login&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
      <% end %>
      <p><%= link_to 'Forgot password?', new_password_reset_path %></p>
    </div>
  </div>
</div>

