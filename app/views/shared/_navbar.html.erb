<script>
  $(document).ready(function () {
    var previousScroll = 0;
    $(window).scroll(function () {
      var currentScroll = $(this).scrollTop();
      if (currentScroll < 50) {
        showTopNav();
      } else if (currentScroll > 0 && currentScroll < $(document).height() - $(window).height()) {
        if (currentScroll > previousScroll) {
          hideNav();
        } else {
          showNav();
        }
        previousScroll = currentScroll;
      }
    });

    function hideNav() {
      $(".invitation-container").removeClass("is-visible").addClass("is-hidden");
    }

    function showNav() {
      $(".invitation-container").removeClass("is-hidden").addClass("is-visible").addClass("scrolling");
    }
  });
</script>
